{
    "author": "Catux",
    "dependencies": {
        "@fortawesome/fontawesome-free": "^6.5.1",
        "bootstrap": "^5.3.2",
        "jquery": "^3.7.1"
    },
    "devDependencies": {
        "browser-sync": "^3.0.2",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^8.2.2",
        "copyfiles": "^2.4.1",
        "esbuild": "^0.25.0",
        "glob": "^11.1.0",
        "nunjucks": "^3.2.4",
        "sass": "^1.72.0"
    },
    "name": "catux-homepage",
    "scripts": {
        "build": "npm run clean && npm run posts && npm run templates && npm run sass:prod && npm run bundle:prod && npm run copy && npm run sitemap",
        "bundle": "esbuild app/src/js/main.js --bundle --format=iife --target=es6 --outfile=app/public/js/main.js",
        "bundle:prod": "esbuild app/src/js/main.js --bundle --format=iife --target=es6 --minify --outfile=app/public/js/main.js",
        "clean": "rm -rf app/public/*",
        "copy": "npm run copy:images && npm run copy:fonts && npm run copy:robots",
        "copy:fonts": "copyfiles -u 4 node_modules/@fortawesome/fontawesome-free/webfonts/* app/public/webfonts/",
        "copy:images": "mkdir -p app/public/images && cp -R app/src/images/* app/public/images/",
        "copy:robots": "cp app/src/robots.txt app/public/",
        "dev": "npm run clean && npm run posts && npm run templates && npm run sass && npm run bundle && npm run copy && concurrently \"npm:sass:watch\" \"npm:watch:templates\" \"npm:watch:posts\" \"npm:watch:js\" \"npm:watch:assets\" \"npm:serve\"",
        "posts": "node generate-post-list.js",
        "sass": "sass app/src/stylesheets:app/public/css --style=expanded",
        "sass:prod": "sass app/src/stylesheets:app/public/css --style=compressed",
        "sass:watch": "sass app/src/stylesheets:app/public/css --watch",
        "serve": "browser-sync start --server app/public --files 'app/public/**/*,app/public/*'",
        "sitemap": "node generate-sitemap.js",
        "templates": "node render-templates.js",
        "watch:assets": "chokidar 'app/src/images/*' 'app/src/fonts/*' -c 'npm run copy'",
        "watch:js": "chokidar 'app/src/js/*' -c 'npm run bundle'",
        "watch:posts": "chokidar 'app/src/templates/posts/**/*' -c 'npm run posts'",
        "watch:templates": "chokidar 'app/src/templates/**/*' -c 'npm run templates'"
    },
    "version": "3.0.0"
}
